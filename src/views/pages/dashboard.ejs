    </li>
    <li class="menu-item">
      <a href="#" id="logout_link">Sign out</a>
    </li>
    <%- include('../partials/headerBottom.ejs') %>
      <!-- Start main-content -->
      <div class="main-content-area">
        <!-- Section: page title -->

        <!-- Admin dashboard container -->
        <div class="container-fluid p-5">
          <!-- Page header -->
          <h1 class="mb-4">Admin Dashboard</h1>

          <!-- Product management section -->
          <h2 class="mb-4">Product Management</h2>
          <div class="card mb-4">
            <div class="card-header">
              <h3>Edit Product</h3>
            </div>
            <div class="card-body">
              <!-- Product select dropdown -->
              <div class="form-group">
                <label for="product-select">Select a product:</label>
                <select class="form-control" id="product-select">
                  <% for(let product of products.docs) {%>
                    <option value=<%=product?.id%>><%=product?.product_name%>
                    </option>
                    <% } %>
                </select>
              </div>
              <!-- Product name input -->
              <div class="form-group my-3">
                <label for="product-name">Product Name:</label>
                <input type="text" class="form-control" id="product-name">
              </div>
              <!-- Product description input -->
              <div class="form-group my-3">
                <label for="product-description">Product Description:</label>
                <textarea class="form-control" id="product-description"></textarea>
              </div>
              <!-- Product price input -->
              <div class="form-group my-3">
                <label for="product-price">Product Price:</label>
                <input type="number" class="form-control" id="product-price">
              </div>
              <!-- notify status -->
              <div class="text-center d-none" id="product_notify"></div>
              <!-- Update product button -->
              <button class="btn btn-primary my-3" id="update-product-button">
                <span id="update_product_text">Update Product</span>
                <span id="update_product_text_spin" class="d-none">
                  <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                  Loading...
                </span>
                </button>
            </div>
          </div>
          

          <!-- User management section -->
          <h2 class="mb-4">User Management</h2>
          <div class="card mb-4">
            <div class="card-header">
              <h3>Edit Users</h3>
            </div>
            <div class="card-body">
              <form id="searchUser">
                <input type="hidden" id="edit-user-id">
                <div class="form-group my-3">
                  <label for="edit-email">Email</label>
                  <input type="email" class="form-control" id="edit-email" placeholder="Enter email">
                </div>
                <div class="form-group my-3">
                  <label for="edit-name">Name</label>
                  <input type="text" class="form-control" id="edit-name" placeholder="Enter name">
                </div>
                <div class="form-group my-3">
                  <label for="activity">Has Logged In During the Last</label>
                  <p id="activity">
                    <input type="text" id="loged_at" class="date start" placeholder="Date Start" /> to
                    <input type="text" id="loged_out_at" class="date end" placeholder="Date End" />
                  </p>
                  <!-- Datepair Script -->
                  <script>
                    (function ($) {
                      $('#activity .date').datepicker({
                        'format': 'm/d/yyyy',
                        'autoclose': true
                      });

                      // initialize datepair
                      var activityDiv = document.getElementById('activity');
                      var datepair = new Datepair(activityDiv);
                    })(jQuery);
                  </script>

                </div>
                <div class="text-center d-none" id="user_search_notify"></div>
                <button type="submit" class="btn btn-primary" id="user_search">
                  <span id="search_user_text">Search Users</span>
                  <span id="search_user_text_spin" class="d-none">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Loading...
                  </span>
                  </button>
                <button type="button" class="btn btn-secondary" id="cancel-edit-user">Cancel</button>
              </form>
              <br>

              <div class="my-4">
                <label for="populate">Click the button to populate the users table below with all users in
                  the
                  database</label>
                <br>
                <button name='populate' id='populate' type="button" class="btn btn-sm btn-dark">Populate</button>
              </div>


              <!-- User table -->
              <div id="user_delete_modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                aria-hidden="true">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                  <h3 id="myModalLabel">Delete</h3>
                </div>
                <div class="modal-body">
                  <p> Are you sure you want to delete this user?</p>
                </div>
                <div class="modal-footer">
                  <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                  <button data-dismiss="modal" class="btn red" id="btnYes">Confirm</button>
                </div>
              </div>
              
              <table class="table table-striped table-hover table-users">
                <thead>
                  <tr>
                    <th >First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Email Confirmed</th>
                    <th>Address</th>
                    <th>Address Line 2</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip</th>
                    <th>Phone</th>
                    <th>Jotform Filled</th>
                    <th>Registered On</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody id="user-table-body">
                </tbody>
              </table>
            </div>
          </div>
          <!-- end main-content -->
          <%- include('../partials/footer') %>


            <!-- Footer Scripts -->
            <script src="js/custom.js"></script>
            <script src="js/api_call.js"></script>

